@model PresupuestoSite.Models.DTO.Cargas

 
@using (Html.BeginForm() )
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <p id="data"></p>
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <fieldset class="card card-body">
                    <form id="frmUpload" class="frmUpload" method="post"  encType="multipart/form-data">
                        <div class="row">
                            <div class="row">
                                <div class="form-check col-auto">
                                    <input class="form-check-input" type="radio" name="docTypeRadio" id="ckPresupuesto" value="Presupuesto" checked>
                                    <label class="form-check-label fw-bold" for="ckPresupuesto">
                                        Presupuesto
                                    </label>
                                </div>
                                <div class="form-check col-auto">
                                    <input class="form-check-input" type="radio" name="docTypeRadio" id="ckCuota" value="Cuota">
                                    <label class="form-check-label fw-bold" for="ckCuota">
                                        Cuota
                                    </label>
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end text-end">
                                <a id="aPresuFormato" href="#" class="btn btn-success" title="Descargar formato"><i class="fa fa-sharp fa-regular fa-file-excel text-white fa-lg"></i> Presupuesto Formato </a>&nbsp;&nbsp;
                                <a id="aCuotaFormato" href="#" class="btn btn-info" title="Descargar formato"><i class="fa fa-sharp fa-regular fa-file-excel text-white fa-lg"></i> Cuota Formato </a>
                            </div>
                            @*<div class="col-md-12 mb-2 mt-0">
            <label class="form-label fw-bold text-capitalize" for="exampleFormControlSelect1">Documento</label>
            <div class="mb-2">
                @Html.DropDownListFor(m => m.presupuestoCarga.DETALLES, Model.TiposDocumentos,
                new { @class = "form-control", @id = "intSelectOpt" })
            </div>
        </div>*@
                            <div class="col-md-3  form-group mb-3 mt-4">
                                <label for="sopTipoMovimiento" id="lbsopTipoPresupuesto" class="form-label fw-bold text-capitalize cs-isrequired-label">Tipo Movimiento</label>
                                <select id="sopTipoMovimiento" class="form-select">
                                    <option>-Seleccione-</option>
                                </select>
                            </div>
                            <div class="col-md-3  form-group mb-3 mt-4">
                                <label for="sopTipoMovimiento" id="lbsopTrimestre" class="form-label fw-bold text-capitalize cs-isrequired-label">Trimestre</label>
                                <select id="sopTrimestre" class="form-select">
                                    <option>-Seleccione-</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6 mb-3 mt-4">
                                <label for="postedFiles" class="form-label fw-bold text-capitalize">Seleccione Archivo Excel:</label>
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <input type="file" id="postedFiles" name="postedFiles" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" class="form-control" />
                                        <span id="spLoadFile" class="input-group-text custon-btn-link" title="Cargar documento de Excel"><i class="fa fa-sharp fa-regular fa-file-excel text-success fa-lg"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-8 mt-2">
                                @*<a><i class="fas fa-plus"></i> Cargar<input type="submit" class="btn btn-primary" value="Cargar" /></a>*@
                                <button id="btnUpload" class="btn btn-primary" disabled=disabled><i class="fas fa-plus"></i> Cargar</button>&nbsp;&nbsp;
                                <input type="reset" class="btn btn-warning text-white" onclick="resetData();" value="Limpiar" />
                            </div>

                        </div>
                    </form>
                </fieldset>
            </div>

        </div>
    </div>
    <div class="mt-5">
        <br />
        <br />
    </div>
    <div class="mt-5">
        <br />
        <br />
    </div>
    <div class="mt-3">
        <br />
    </div>

}

